<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SureliOyunActivity">

    <TextView
        android:id="@+id/textViewIlBilgiS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:textColor="#000000"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtViewSureS"
        app:layout_constraintStart_toStartOf="@+id/txtViewSureS"
        app:layout_constraintTop_toBottomOf="@+id/txtViewSureS" />

    <TextView
        android:id="@+id/textViewIlS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:textColor="#000000"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textViewIlBilgiS"
        app:layout_constraintStart_toStartOf="@+id/textViewIlBilgiS"
        app:layout_constraintTop_toBottomOf="@+id/textViewIlBilgiS" />

    <EditText
        android:id="@+id/editTxtTahminS"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:hint="Tahminizi Giriniz"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewIlS" />

    <Button
        android:id="@+id/btnHarfAlS"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:onClick="btnHarfAlS"
        android:text="Harf Al"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTxtTahminS" />

    <Button
        android:id="@+id/btnTahminEtS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:onClick="btnTahminEtS"
        android:text="Tahminde Bulun"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTxtTahminS" />

    <TextView
        android:id="@+id/textViewToplamPuanS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Toplam Bölüm Puanı: 0"
        android:textColor="#000000"
        android:textSize="19sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtViewSureS"
        android:layout_width="40dp"
        android:layout_height="24dp"
        android:layout_marginTop="50dp"
        android:text="3:00"
        android:textColor="#000000"
        android:textSize="19sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/textViewToplamPuanS"
        app:layout_constraintStart_toStartOf="@+id/textViewToplamPuanS"
        app:layout_constraintTop_toBottomOf="@+id/textViewToplamPuanS" />

    <Button
        android:id="@+id/btnTekrarOynaS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:onClick="btnTekrarOynaS"
        android:text="Tekrar Oyna"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTahminEtS" />
</androidx.constraintlayout.widget.ConstraintLayout>